# A sample Gemfile
source :rubygems

gem 'rake'
gem 'rack', '1.6.12'
gem 'sinatra', '>= 1.3.1'
gem 'sinatra-contrib', '>= 1.3.1'
gem 'jim'
gem 'closure-compiler'
gem 'redis'
gem 'redised'
gem 'compass'
gem 'haml'
gem 'typhoeus'
gem 'yajl-ruby'
gem 'pony'

group :test do
  gem 'minitest', :require => false
  gem 'minitest-display', :require => false
end

group :development do
  gem 'sinatra-reloader', '>= 1.0'
  gem 'thin', '>= 1.3.1'
  gem 'ruby-debug19'
end

group :production do
  gem 'unicorn', '>= 4.3.1'
end
